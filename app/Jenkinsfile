pipeline {
    agent any
    environment {
        JAVA_17 = tool name: 'JDK17'
        PATH = "${env.JAVA_17}/bin:${env.PATH}"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                bat './gradlew.bat assembleDebug'
            }
        }
    }
}
