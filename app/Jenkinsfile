pipeline {
    agent any
    environment {
        JAVA_HOME = tool name: 'JDK17'
        PATH = "${env.JAVA_HOME}/bin:${env.PATH}"
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Clean Gradle Cache') {
            steps {
                bat 'gradlew.bat clean'
                bat 'gradlew.bat cleanBuildCache'
            }
        }
        stage('Build') {
            steps {
                bat 'gradlew.bat assembleDebug --stacktrace --info'
            }
        }
    }
}